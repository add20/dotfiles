[user]
  name = add20
  email = "add20g@gmail.com"
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  pager = less -FRSX
[color]
  ui = auto
[merge]
  ff = false
[branch]
  autosetuprebase = always
[push]
 default = simple
[pull]
  rebase = true
[grep]
  lineNumber = true
[alias]
  # branch
  b  = branch
  br = branch
  # commit
  ci = commit -v
  # checkout
  co = checkout
  # status
  s  = status
  st = status -sb
  ss = status -sb
  # diff
  d  = diff
  df = diff
  dc = diff --cached
  ds = diff --staged
  dw = diff --no-ext-diff --color-words
  # rebase
  rbm  = rebase --merge master
  rbd  = rebase --merge develop
  rbi  = rebase -i
  rbi1 = rebase -i HEAD^
  rbi2 = rebase -i HEAD^^
  rbi3 = rebase -i HEAD^^^
  rbi4 = rebase -i HEAD^^^^
  rbi5 = rebase -i HEAD^^^^^
  # log
  last = log -1 -p HEAD
  graph = log --oneline --decorate --graph --all
  # grep
  g = grep --break --heading --line-number
  # reset
  unstage = reset HEAD --
  # other
  stash-unapply = !git stash show -p | git apply -R
[tig "bind"]
  generic = g move-first-line
  generic = G move-last-line
